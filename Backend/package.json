{
  "name": "sirius-data-layer",
  "version": "1.0.0",
  "description": "Sirius Data Layer - Trust and traceability layer for Walrus distributed storage",
  "main": "dist/index.js",
  "bin": {
    "sirius-data": "./dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/cli/index.ts",
    "start": "node dist/cli/index.js",
    "api:dev": "ts-node src/api/server.ts",
    "api:dev:watch": "nodemon --watch src --exec ts-node src/api/server.ts",
    "api:start": "node dist/api/server.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "db:init": "prisma migrate dev --name init",
    "prepare": "npm run build"
  },
  "keywords": [
    "walrus",
    "sui",
    "blockchain",
    "merkle-tree",
    "data-integrity",
    "versioning"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@mysten/sui": "^1.45.0",
    "@noble/ciphers": "^0.6.0",
    "@prisma/client": "^5.7.0",
    "commander": "^11.1.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "multer": "^2.0.2",
    "tweetnacl": "^1.0.3",
    "uuid": "^9.0.1"
  },
  "_comment_sui": "For production: add @mysten/sui.js for real blockchain integration",
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/jest": "^29.5.11",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.10.5",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "prisma": "^5.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
